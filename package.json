{
    "name": "salihate-clean-backend",
    "version": "1.0.0",
    "description": "Backend API for Salihate application with clean architecture",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "test": "jest --coverage",
        "lint": "eslint src/",
        "db:migrate": "npx sequelize-cli db:migrate",
        "db:seed": "npx sequelize-cli db:seed:all",
        "db:reset": "npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all"
    },
    "keywords": [
        "backend",
        "api",
        "nodejs",
        "express",
        "postgresql",
        "sequelize"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.18.2",
        "dotenv": "^16.0.3",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.35.2",
        "jsonwebtoken": "^9.0.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "express-validator": "^7.0.1",
        "express-rate-limit": "^7.1.5",
        "pdfkit": "^0.14.0",
        "archiver": "^6.0.1",
        "morgan": "^1.10.0",
        "winston": "^3.11.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^4.6.3"
    },
    "devDependencies": {
        "nodemon": "^2.0.22",
        "jest": "^29.5.0",
        "supertest": "^6.3.3",
        "sequelize-cli": "^6.6.2",
        "eslint": "^8.42.0"
    }
}